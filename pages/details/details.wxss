/* pages/details/details.wxss */
.details_img > image{
  width: 100%;
}
.details_box{
  width: 100%;
  border-top-left-radius: 20px;
  border-top-right-radius: 20px;
  position: fixed;
  background: #fff;
  bottom: 0px;

}
.video_content {
  display: block;
  padding: 0 15px 10px 15px;
  margin: 15px auto;
  text-align: left;
  border-bottom: 1px solid #eee;
}

.details_box .video_description {
  font-size: 13px;
  line-height: 30px;
}

.details_box .tag {
  background: #ffbc00;
  min-width: 50px;
  font-size: 12px;
  padding: 3px 5px;
  border-radius: 5px;
  line-height: 30px;
}

.details_box .user_head {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  vertical-align: middle;
  margin-bottom: 5px;
}

.details_box .username {
  font-size: 13px;
  margin-left: 5px;
}

.details_box .video_img {
  width: 340rpx;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
}

.details_box .attention {
  float: right;
  font-size: 12px;
  text-align: center;
  width: 100rpx;
  line-height: 25px;
  border-radius: 30rpx;
}
.click_attention{
  background: #8564f0;
  color: #fff;
  box-shadow: 0px 3px 4px rgba(133, 100, 240, 0.4);
}
.concerned{
  background: #eee;
  color: #999;
  box-shadow: 0px 3px 4px rgba(102, 102, 102, 0.2);

}


.details_box .attention_operate icon {
  color: #e5e8f1;
  font-size: 36px;
}
.attention_operate .operate_item {
  display: inline-block;
  width: 33.33%;
  text-align: center;
  line-height: 30px;
  margin-bottom: 20px;
}
.attention_operate .operate_item text{
  display: block;
  color: #bfc4d2;
  font-size: 14px;
  line-height: 20px;
}
.attention_operate button.operate_item{
  background: none;
  border: none;
  padding: 0;
  overflow: initial;
}
.attention_operate button.operate_item::after{
  border: none;
}