/**index.wxss**/

.weui-tab {
  position: relative;
  height: 100%;
}

.weui-navbar {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  position: absolute;
  z-index: 500;
  top: 0;
  width: 100%;
}

.weui-navbar__item {
  position: relative;
  display: block;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  padding: 10px 0;
  text-align: center;
  font-size: 0;
}

.weui-navbar__item.weui-bar__item_on {
  color: #000;
  font-weight: bold;
}

.weui-navbar__slider {
  position: absolute;
  content: " ";
  left: 165rpx !important;
  bottom: 0;
  width: 1em;
  height: 4px;
  border-radius: 5px;
  background-color: #ffbc00;
  -webkit-transition: -webkit-transform 0.3s;
  transition: -webkit-transform 0.3s;
  transition: transform 0.3s;
  transition: transform 0.3s, -webkit-transform 0.3s;
}

.weui-navbar__title {
  display: inline-block;
  font-size: 15px;
  max-width: 8em;
  width: auto;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: normal;
}

.weui-navbar__item.weui-bar__item_on .weui-navbar__title {
  font-size: 16px;
}

.weui-tab__panel {
  box-sizing: border-box;
  height: 100%;
  padding-top: 50px;
  overflow: auto;
  -webkit-overflow-scrolling: touch;
}

.weui-tab__content {
  padding-top: 10px;
  text-align: center;
}

.container .banner {
  width: 100%;
  height: 350rpx;
  background-color: #eee;
  border-radius: 10px;
  box-shadow: 0px 6px 5px rgba(65, 174, 220, 0.2);
}

.group {
  display: flex;
  margin: 50rpx 0;
  width: 100%;
  align-items: center;
  justify-content: center;
}

.group .icon_item {
  width: 25%;
  display: inline-block;
  text-align: center;
}

.group .icon_item .icon {
  width: 100rpx;
  height: 100rpx;
}

.group .icon_item text {
  display: block;
  margin-top: 10rpx;
  font-size: 13px;
  color: #333;
}

.content .title {
  float: left;
}

.content .more {
  float: right;
  font-size: 13px;
  color: #999;
}

.hot_service {
  margin: 30px 0;
}

.hot_service_item {
  clear: both;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.hot_service_img {
  display: inline-block;
}

.hot_service_img image {
  height: 205rpx;
  width: 340rpx;
}

.attention_list .video_img {
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
  width: 100%;
  height: 250px;
}

.attention_list .user_head {
  width: 50px;
  height: 50px;
  margin-top: 10px;
}

.attention_list .publish_time {
  float: right;
  font-size: 13px;
  color: #999;
  margin-top: 20px;
}

.attention_list .tag {
  clear: both;
}

.attention_operate {
  width: 90%;
  margin: 0 auto;
  padding-bottom: 10px;
}

.attention_operate .operate_item {
  display: inline-block;
  width: 33.33%;
  text-align: left;
  line-height: 30px;
}

.attention_operate .operate_item text {
  font-size: 13px;
  color: #999;
  line-height: 18px;
  margin-left: 5px;
}

.attention_list icon {
  color: #999;
  font-size: 18px;
}
.attention_list .icon-likefill{
  color: #ffbc00;
}
.attention_list button.operate_item{
  background: none;
  border: none;
  padding: 0;
  overflow: initial;
}
.attention_list button.operate_item::after{
  border: none;
}