/* tab css */

.weui-tab {
  position: relative;
  height: 100%;
}

.weui-navbar {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  position: absolute;
  z-index: 500;
  top: 0;
  width: 100%;
}

.weui-navbar__item {
  position: relative;
  display: block;
  padding: 6px 15px;
  text-align: center;
  font-size: 0;
  color: #999;
}

.weui-navbar__item.weui-bar__item_on {
  color: #000;
  font-weight: bold;
  font-size: 18px;
}

.weui-navbar__slider {
  position: absolute;
  content: " ";
  left: 70rpx !important;
  bottom: 0;
  width: 1em;
  height: 4px;
  border-radius: 5px;
  background-color: #ffbc00;
  -webkit-transition: -webkit-transform 0.3s;
  transition: -webkit-transform 0.3s;
  transition: transform 0.3s;
  transition: transform 0.3s, -webkit-transform 0.3s;
}

.weui-navbar__title {
  display: inline-block;
  font-size: 14px;
  max-width: 8em;
  width: auto;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: normal;
}

.weui-navbar__item.weui-bar__item_on .weui-navbar__title {
  font-size: 16px;
}

.weui-tab__panel {
  box-sizing: border-box;
  height: 100%;
  padding-top: 50px;
  overflow: auto;
  -webkit-overflow-scrolling: touch;
}

/* tab --end*/

